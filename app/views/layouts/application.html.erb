<!DOCTYPE html>
<html>
  <head>
    <title>Wigbate</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div>
      <%= link_to 'Wigbate', root_path %>
    </div>

    <div>
      <%= mail_to 'wigbate@gmail.com', 'Email Wigbate' %>
      <%= link_to 'Twitter', 'http://twitter.com/wigbatedotcom', target: '_blank' %>
    </div>

    <% if notice %>
      <p id='notice' class='notice'><%= notice %></p>
    <% end %>
    <% if alert %>
      <p id='alert' class='alert'><%= alert %></p>
    <% end %>

    <%= yield %>

    <div>
      <% if admin_signed_in? %>
        <%= link_to 'Logout', destroy_admin_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Admin Login', new_admin_session_path %>
      <% end %>
    </div>

  </body>
</html>
